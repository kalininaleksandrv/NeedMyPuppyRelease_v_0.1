<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.eyesless.needmypuppy.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/breed_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/for_what_image"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/breed_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="wrap"
        android:text="@string/no_data"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorText"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_image" />

    <TextView
        android:id="@+id/breed_descript"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/web_linc_wiki"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/externallink"
        android:gravity="center"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/linc"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_descript"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
 />

    <TextView
        android:id="@+id/textView_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="all rights for the images belong they respective owners"
        android:textSize="@dimen/text_size_smallest"
        android:gravity="right"
        android:textColor="@android:color/darker_gray"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/breed_image" />


</android.support.constraint.ConstraintLayout>
</ScrollView>