<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.eyesless.needmypuppy.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_top"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="spread"
        android:layout_height="wrap_content"
        android:text="@string/intro_about_for_what_activity"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/textView_numberOfBreeds"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="0dp"
        android:textSize="@dimen/text_size_small"
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_top"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp" />

    <CheckBox
        android:id="@+id/checkBox_opt1"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt1"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/textView_numberOfBreeds"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/number_for_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:textSize="@dimen/text_size_small"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox_opt1"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt1"
        android:layout_marginBottom="8dp" />

        <CheckBox
        android:id="@+id/checkBox_opt2"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt2"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/number_for_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt2"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt2"
            android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBox_opt3"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt3"
        android:textSize="@dimen/text_size"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/number_for_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt3"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt3"
            android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBox_opt4"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt4"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt3" />

        <TextView
            android:id="@+id/number_for_hunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt4"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt4"
            android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBox_opt5"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt5"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt4" />

        <TextView
            android:id="@+id/number_for_obidience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt5"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt5"
            android:layout_marginBottom="8dp" />

        <CheckBox
        android:id="@+id/checkBox_opt6"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt6"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt5" />

        <TextView
            android:id="@+id/number_for_guard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt6"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt6"
            android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBox_opt7"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt7"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt6" />

        <TextView
            android:id="@+id/number_for_zks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt7"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt7"
            android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkBox_opt8"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="wrap"
        android:layout_height="wrap_content"
        android:text="@string/flag_opt8"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt7" />

        <TextView
            android:id="@+id/number_for_agility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checkBox_opt8"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox_opt8"
            android:layout_marginBottom="8dp" />


    <ImageButton
        android:id="@+id/button_complete_forwhat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_complete"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_opt8"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/forward"
        />

    </android.support.constraint.ConstraintLayout>

</ScrollView>